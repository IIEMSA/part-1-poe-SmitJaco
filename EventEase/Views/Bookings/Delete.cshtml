@model EventEase.Models.Booking

<h1>Delete Booking</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking</h4>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Event != null)
            {
                @Model.Event.EventName
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venue)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Venue != null)
            {
                @Model.Venue.VenueName
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookingDate)
        </dd>
    </dl>

    <form asp-action="Delete" asp-controller="Bookings" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="BookingId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" asp-controller="Bookings" class="btn btn-secondary ml-2">Back to List</a>
    </form>
</div>